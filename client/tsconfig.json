{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": ["ES2019"],
    "outDir": "out",
    "rootDir": "src",
    "baseUrl": "../",
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "composite": true,
    "tsBuildInfoFile": "out/.tsbuildinfo"
  },
  "exclude": ["node_modules", ".vscode-test", "../shared/src", "out"],
  "references": [{ "path": "../shared" }]
}
