{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["ES2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "out",
    "rootDir": "src",
    "baseUrl": "./",
    "composite": true,
    "paths": {
      "@shared/*": ["../shared/out/*"]
    }
  },
  "exclude": ["node_modules", ".vscode-test", "out", "../shared/src"],
  "references": [{ "path": "../shared" }]
}
